{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": ".", // already set
    "rootDir": "./src",
    "paths": {
      "@common/*": ["../common/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types", "../common/*"]
  },
  "include": ["src/**/*", "src/types/**/*", "../common/*", "src/**/*.d.ts"]
}
