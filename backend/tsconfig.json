{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "dist",
    "baseUrl": ".", // already set
    "rootDir": "./src",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,

    "skipLibCheck": true,
    "paths": {
      "@common/*": ["../common/*"]
    },
    "typeRoots": ["./node_modules/@types", "**.d.ts", "../common/*"]
  },
  "include": [
    "src/**/*",
    "src/types/**/*",
    "../common/*",
    "src/**/*.d.ts",
    "index.d.ts"
  ]
}
